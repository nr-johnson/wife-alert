extends layout.pug 

block head 
    title Home


block content
    main#homeMain(class='container-fluid')
        section#homeMessage(class='homeMsg' onclick='toggleMessage()')
            span
            //- span 00000000000000000000000000000000000000
        aside#customForm 
            div(class='back')
            form(onsubmit="sendCustomMessage(event, this.children[0])")
                textarea#customText(name=message)
                div(class='row w-100 mx-auto p-0 justify-content-between')
                    div(class='col-3 p-0')
                        button(class='cancel' onclick='toggleCustomMessage(false); return false') Cancel
                    div(class='col-3 p-0')
                        button(type='submit') Send
        aside#info(class='')
            div(class='back' onclick='toggleInfo(false)')
            div(class='info-box')
                h5 Legend:
                p 1 
                    span &nbsp;&nbsp;&nbsp;Come when you can.
                p 2 
                    span &nbsp;&nbsp;&nbsp;I can't continue what I'm doing without you.
                p 3 
                    span &nbsp;&nbsp;&nbsp;I need you now! 
                p ! 
                    span &nbsp;&nbsp;&nbsp;We need to go to the hospital!
        section#customBtnCont
            div#customBtn(class='customBtn' onclick='toggleCustomMessage(true)')
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="currentColor" class="bi bi-chat-dots-fill" viewBox="0 0 16 16">
                    <path d="M16 8c0 3.866-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.584.296-1.925.864-4.181 1.234-.2.032-.352-.176-.273-.362.354-.836.674-1.95.77-2.966C.744 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7zM5 8a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm4 0a1 1 0 1 0-2 0 1 1 0 0 0 2 0zm3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
                </svg>
        section#infoBtnCont 
            div#infoBtn(class='infoBtn' onclick='toggleInfo(true)')
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="currentColor" class="bi bi-info-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                </svg>
        section#statusCont(class='')
            div#statusLight
            div#statusText Connecting
        ul#buttonsCont(class='row justify-content-center')
            li#btn1(class='btn btn-low col-4')
                span(class='alert-btn'  data-level='1')
                    div(class='loader')
            li#btn2(class='btn btn-mid col-4')
                span(class='alert-btn' data-level='2')
                    div(class='loader')
            li#btn3(class='btn btn-high col-4')
                span(class='alert-btn' data-level='3')
                    div(class='loader')
            li#btn4(class='btn btn-urg col-4')
                span(class='alert-btn' data-level='4')
                    div(class='loader')
    
    audio#sndClick(src="/sounds/click.wav")
    audio#sndSccs(src="/sounds/success.wav")
    audio#sndAckn(src="/sounds/acknowledged.wav")
    audio#sndError(src="/sounds/low.wav")